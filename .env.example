# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mailserver

# Security
JWT_SECRET=your-jwt-secret-min-32-characters-long
ENCRYPTION_KEY=your-encryption-key-32-characters

# Initial Admin (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Email Transport Configuration
# Option 1: Brevo HTTP API (recommended for Railway - bypasses SMTP port blocks)
BREVO_API_KEY=

# Option 2: SMTP relay (not available on Railway free/hobby plans)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Server
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=
