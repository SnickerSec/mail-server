generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Domain {
  id             String     @id @default(cuid())
  name           String     @unique
  dkimSelector   String     @default("mail")
  dkimPrivateKey String     @db.Text
  dkimPublicKey  String     @db.Text
  isVerified     Boolean    @default(false)
  isActive       Boolean    @default(true)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  apiKeys        ApiKey[]
  emailLogs      EmailLog[]

  @@index([name])
}

model ApiKey {
  id         String    @id @default(cuid())
  name       String
  keyHash    String
  keyPrefix  String
  domainId   String
  domain     Domain    @relation(fields: [domainId], references: [id], onDelete: Cascade)
  isActive   Boolean   @default(true)
  expiresAt  DateTime?
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())

  @@index([keyPrefix])
  @@index([domainId])
  @@index([expiresAt])
}

model EmailLog {
  id          String   @id @default(cuid())
  domainId    String
  domain      Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  messageId   String?
  fromEmail   String
  toEmail     String
  subject     String
  status      String
  error       String?  @db.Text
  retryCount  Int      @default(0)
  nextRetryAt DateTime?
  sentAt      DateTime @default(now())

  @@index([domainId])
  @@index([sentAt])
  @@index([status])
  @@index([nextRetryAt])
}

model AdminUser {
  id                    String   @id @default(cuid())
  email                 String   @unique
  passwordHash          String
  requirePasswordChange Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
