{
  "name": "mail-server",
  "version": "1.0.0",
  "description": "Production multi-domain mail server for Railway",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run build:dashboard",
    "build:server": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --packages=external",
    "build:dashboard": "cd dashboard && npm run build && cp -r dist ../public",
    "start": "tsx dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.12",
    "nodemailer-brevo-transport": "^2.2.1",
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.0.3",
    "@types/node-forge": "^1.3.11",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16"
  },
  "optionalDependencies": {
    "prisma": "^7.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "hono": "^4.11.4"
  }
}
